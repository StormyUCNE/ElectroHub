@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>
            <main>
                <article>
                    @Body
                </article>
            </main>
        </div>
    </Authorized>

    <NotAuthorized>
        <div class="page">
            <main>
                <div class="top-auth">
                    <a class="btn btn-outline-primary" href="Account/Register">Registrarse</a>
                    <a class="btn btn-primary" href="/Account/Login">Iniciar Sesión</a>
                </div>

                <article>
                    @Body
                </article>
            </main>
        </div>
    </NotAuthorized>
</AuthorizeView>


<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
