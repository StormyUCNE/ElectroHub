@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>
            <main>
                    @Body
            </main>
        </div>
    </Authorized>

    <NotAuthorized>
        <div class="page">
            <main>
                <article>
                    @Body
                </article>
            </main>
        </div>
    </NotAuthorized>
</AuthorizeView>


<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
